<%= form_with model: [@warehouse, @section, @zone] do |form| %>
  <%= render "shared/form_error", form: form %>
  <div style = "margin:4%">
    <%= form.label "Name of Zone" %><br>
    <%= form.text_field :name, required: true %>
  </div>
  <div style = "margin:4%">
    <%= form.label "Zone code" %><br>
    <%= form.text_field :code, required: true %>
  </div>
  <div style = "margin:4%">
    <%= form.label "Describe zone" %><br>
    <%= form.text_area :description, required: true %>
  </div>
  <div style = "margin-left:4%"><%= form.submit %></div>
<% end %>
